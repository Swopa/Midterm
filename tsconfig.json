// TEMPORARY tsconfig.json for testing
{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES2020", // Make sure this is NOT CommonJS
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "types": ["chrome"],
    "moduleResolution": "node", // <<< Important for finding modules in node_modules
    "esModuleInterop": true,    // <<< Often helps with different module types
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"]
}